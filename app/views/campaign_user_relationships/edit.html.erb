<h2>Edit Sponsorship</h2>

<%= form_for @campaign_user_relationship, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render "shared/error_messages", :object => f.object %>
  <div class="control-group">
    <%= f.label :amount_per_mile, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount_per_mile, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                charities_path, :class => 'btn' %>
  </div>
<% end %>
