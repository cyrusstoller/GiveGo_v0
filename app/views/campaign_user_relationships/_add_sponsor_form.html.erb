
  <div style="clear:both">
    <a class="btn-large btn-primary" data-toggle="modal" href="#sponsorModal">Become a Sponsor</a>
  </div>

  <div class="modal hide" id="sponsorModal">
    <%= form_for CampaignUserRelationship.new(:campaign_id => campaign.id, :user_id => session[:user_id]), 
        :html => { :class => 'form-vertical' } do |f| %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">Ã—</button>
      <h3>New Pledge Sponsor</h3>
    </div>
    <div class="modal-body">
      
      <%= f.hidden_field :campaign_id %>
      <%= f.hidden_field :user_id %>

      <div class="control-group">
        <%= f.label :amount_per_mile, "Dollars pledged per mile", :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :amount_per_mile, :class => 'message_field' %>
        </div>
      </div>
      
    </div>
    <div class="modal-footer">
      <div class="form-actions">
        <%= f.submit "Submit", :class => 'btn-large btn-primary' %>
      </div>
    </div>

    <% end %>
  </div>

  
