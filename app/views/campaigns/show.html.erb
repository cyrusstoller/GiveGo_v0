<%- model_class = @campaign.class -%>
    
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class="row">
  <div class="span8">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:owner_id) %>:</strong></dt>
      <dd><%= @campaign.owner_id %></dd>
      <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
      <dd><%= @campaign.start_date %></dd>
      <dt><strong><%= model_class.human_attribute_name(:end_date) %>:</strong></dt>
      <dd><%= @campaign.end_date %></dd>
      <dt><strong><%= model_class.human_attribute_name(:charity_id) %>:</strong></dt>
      <dd><%= @campaign.charity_id %></dd>
      <dt><strong><%= model_class.human_attribute_name(:message) %>:</strong></dt>
      <dd><%= @campaign.message %></dd>
    </dl>

    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                  campaigns_path, :class => 'btn'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_campaign_path(@campaign), :class => 'btn' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  campaign_path(@campaign),
                  :method => 'delete',
                  :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                  :class => 'btn btn-danger' %>
    </div>
  </div>

  <div class="span4">
    <% if @campaign.owner_id == session[:user_id] %>
      <!-- This is you -->
      <%= render "campaign_user_relationships/my_campaign", :campaign => @campaign %>
    <% elsif @campaign.sponsors.find_by_id(session[:user_id]).nil? %>
      <!-- become a new sponsor -->
      <%= render "campaign_user_relationships/add_sponsor_form", :campaign => @campaign %>
    <% else %>
      <!-- already a sponsor -->
      <%= render "campaign_user_relationships/remove_sponsorship", 
          :campaign_user_relationship =>  @campaign.campaign_user_relationships.find_by_user_id(session[:user_id]) %>
    <% end %>
  </div>
</div>